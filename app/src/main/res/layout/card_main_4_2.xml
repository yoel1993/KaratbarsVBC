<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main_1_4_2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/main_card_margin_vertical"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="@dimen/main_card_margin_horizontal"
    android:layout_marginTop="@dimen/main_card_margin_vertical"
    android:layout_weight="1"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/v_flipper_card_3"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:src="@drawable/card_main_apps_1" />

        <TextView
            android:id="@+id/tv_card_main_42_title"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/v_flipper_card_3"
            android:layout_margin="@dimen/card_title_margin"
            android:text="Apps"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_flipper_card_3"
            android:orientation="horizontal"
            android:padding="@dimen/card_button_margin">

            <Button
                android:id="@+id/btn2_card_main4_action"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_card4_button_2"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="@dimen/card_button_margin"
                android:layout_marginRight="@dimen/card_button_margin"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
