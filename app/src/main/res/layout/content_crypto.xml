<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CryptoActivity"
    tools:showIn="@layout/activity_crypto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_cripto_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_cripto_1"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_cripto_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_cripto_2"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="@string/button_cripto_video_presentacion"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/boton_cripto_video_kbc"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical|center|fill"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text_cripto_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_cripto_3"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/text_cripto_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_cripto_4"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text_cripto_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_cripto_5"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_cripto_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_cripto_6"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="@string/button_cripto_video_entrevista"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/boton_cripto_video_entrevista"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical|center|fill"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/text_cripto_7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_cripto_7"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/text_buy_kbc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_buy_kbc"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">


            <ImageView
                app:srcCompat="@drawable/yobit_cripto_exchange"
                android:layout_weight="0.09"
                android:layout_width="100dp"
                android:id="@+id/image_button_yobit"
                android:layout_height="70dp" />
            <ImageView
                app:srcCompat="@drawable/hitbtc_cripto_exchange"
                android:layout_weight="0.09"
                android:layout_width="100dp"
                android:id="@+id/image_button_hitbtc"
                android:layout_height="70dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_cripto_8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_cripto_8"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_cripto_9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_cripto_9"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:text="@string/button_cripto_video_presentacion"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/boton_cripto_video_kcb"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical|center|fill"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text_cripto_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/large_text_cripto_10"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />
        <ImageButton
            android:layout_weight="0.09"
            android:layout_gravity="center"
            android:background="@drawable/buy_tokens_cripto"
            android:id="@+id/buy_kcb_button"
            android:layout_width="180dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/text_karatbars_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/text_karatbars_6"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_weight="0.05">
        </TextView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
