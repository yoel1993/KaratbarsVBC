<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        tools:layout_editor_absoluteY="130dp"
        tools:layout_editor_absoluteX="67dp"
        android:layout_width="250dp"
        android:layout_height="300dp">

        <ImageView
            android:layout_width="234dp"
            android:layout_height="234dp"
            app:srcCompat="@drawable/qr_eth"
            android:id="@+id/qr_donate_eth"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            app:srcCompat="@drawable/donate_ready"
            android:id="@+id/donate_eth_aceptar"
            app:layout_constraintRight_toRightOf="@+id/qr_donate_eth"
            app:layout_constraintLeft_toLeftOf="@+id/qr_donate_eth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/qr_donate_eth"
            app:layout_constraintVertical_bias="1.0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="@color/colorPrimary" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>