<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CryptoActivity"
    tools:showIn="@layout/activity_karatbars">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_karatbars_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/text_karatbars_1"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="@string/boton_karatbars_video_1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/boton_karatbars_video_0"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical|center|fill"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/text_karatbars_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/text_karatbars_2"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:text="@string/boton_karatbars_registrarse"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/boton_karatbars_registrarse"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical|center|fill"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/text_karatbars_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/text_karatbars_3"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:text="@string/boton_karatbars_video_2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/boton_karatbars_video_2"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical|center|fill"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text_karatbars_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/text_karatbars_4"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:text="@string/boton_karatbars_video_3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/boton_karatbars_video_3"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical|center|fill"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/text_karatbars_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/text_margin_very_small"
            android:text="@string/text_karatbars_5"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:src="@drawable/registrate_ahora"
            android:layout_gravity="center"
            android:layout_height="120dp"
            android:layout_width="200dp"
            android:clickable="true"
            android:id="@+id/image_button_karatbars_registrarse"/>
        <TextView
        android:id="@+id/text_karatbars_6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:lineSpacingExtra="@dimen/text_margin_very_small"
        android:text="@string/text_karatbars_6"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_weight="0.05" />

    </LinearLayout>






</android.support.v4.widget.NestedScrollView>
