<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main_1_3"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginBottom="@dimen/main_card_margin_vertical"
    android:layout_marginStart="@dimen/main_card_margin_horizontal"
    android:layout_marginEnd="@dimen/main_card_margin_horizontal"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_card_main_0_title"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_title_margin"
            android:layout_marginEnd="@dimen/card_title_margin"
            android:layout_marginTop="@dimen/card_title_margin"
            android:text="@string/main_card3_title"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_card_main0_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_card_main_0_title"
            android:layout_marginStart="@dimen/card_subtitle_margin"
            android:layout_marginEnd="@dimen/card_subtitle_margin"
            android:layout_marginTop="@dimen/card_button_margin"
            android:text="@string/main_card3_subtitle" />

        <TextView
            android:id="@+id/tv_card_main0_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_card_main0_subtitle"
            android:layout_marginStart="@dimen/card_subtitle_margin"
            android:layout_marginEnd="@dimen/card_subtitle_margin"
            android:layout_marginTop="@dimen/card_button_margin"
            android:text="@string/main_card3_details"
            android:textColor="@color/gray_deep" />

        <View
            android:id="@+id/view_card_main0_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_card_main0_details"
            android:layout_marginTop="@dimen/card_title_margin"
            android:background="@color/gray_light" />

        <LinearLayout
            android:id="@+id/ll_card_main3_rate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view_card_main0_line"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/card_title_margin"
            android:paddingStart="@dimen/card_title_margin">

            <Button
                android:id="@+id/btn_card_main3_action"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_card3_button"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="@dimen/card_button_margin"
                android:layout_marginRight="@dimen/card_button_margin"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_card_main_3"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/home_karatbars" />

    </RelativeLayout>
</android.support.v7.widget.CardView>