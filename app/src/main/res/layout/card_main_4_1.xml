<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main_1_4_1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/text_margin"
    android:layout_marginStart="@dimen/main_card_margin_horizontal"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="@dimen/main_card_margin_vertical"
    android:layout_weight="1"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_main_card_41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/noticias_karatbars" />

        <TextView
            android:id="@+id/tv_card_main_41_title"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_main_card_41"
            android:layout_margin="@dimen/card_title_margin"
            android:text="@string/main_card4_text_noticias"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_main_card_41"
            android:orientation="horizontal"
            android:padding="@dimen/card_button_margin">
            <Button
                android:id="@+id/btn_card_main4_action"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_card4_button_1"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="@dimen/card_button_margin"
                android:layout_marginRight="@dimen/card_button_margin"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
